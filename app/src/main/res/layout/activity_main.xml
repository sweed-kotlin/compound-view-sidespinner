<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    xmlns:sidespinner="http://schemas.android.com/apk/res-auto"

    >

    <de.sweed.compoundviewsidespinner.Sidespinner
        android:id="@+id/fruitsSidespinner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        sidespinner:index="3"
        android:orientation="horizontal" />


    <de.sweed.compoundviewsidespinner.Sidespinner
        android:id="@+id/vegetableSpinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        sidespinner:index="3"
        sidespinner:values="@array/vegetable_array"
        android:layout_below="@id/fruitsSidespinner"/>

</RelativeLayout>